  "main": "eslint.mjs",
  "bin": {
    "vso-eslint": "./eslint.mjs"
  },
  "scripts": {
    "start": "node .",
    "lint": "npm-run-all --continue-on-error lint:tsc lint:eslint",
    "lint:tsc": "tsc -p ../../jsconfig.json",
    "lint:eslint": "eslint -c ../../.eslintrc.yml .",
    "lint:vso": "npm-run-all --continue-on-error lint:vso-*",
    "lint:vso-eslint": "npm run start -- -f compact -c ../../.eslintrc.yml .",
    "lint:vso-tsc": "node ../azure-pipelines-vso-tsc/tsc.mjs -p ../../jsconfig.json"
  },
  "dependencies": {
    "azure-pipelines-task-lib": "^3.1.10",
    "npm-run-all": "^4.1.5"
  },

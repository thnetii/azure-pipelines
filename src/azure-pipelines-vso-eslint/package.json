  "scripts": {
    "start": "node .",
    "lint": "npm run lint:tsc && npm run lint:eslint",
    "lint:tsc": "npx tsc -p ./jsconfig.json",
    "lint:eslint": "npx eslint -c ./.eslintrc.yml .",
    "lint:vso-eslint": "npm run start -- -f compact -c ./.eslintrc.yml .",
    "lint:vso-tsc": "node ../azure-pipelines-vso-tsc/tsc.mjs -p ./jsconfig.json"
  },
